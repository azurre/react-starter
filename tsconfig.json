{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // to import module with '.json' extension  TS2732
    "jsx": "react",
    // '--jsx' is not set.  TS6142
    "noImplicitAny": false,
    // Element implicitly has an 'any' type because type 'typeof globalThis' has no index signature.  TS7017
    "noImplicitThis": false,
    // 'this' implicitly has type 'any' because it does not have a type annotation.  TS2683
    "experimentalDecorators": true,
    // Experimental support for decorators is a feature that is subject to change in a future release. TS1219
    "plugins": [
      {
        "transform": "ts-optchain/transform"
      }
    ]
  },
  "include": ["src"]
}
